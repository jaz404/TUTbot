<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bumperbot">

    <!-- To denote we are using Ignition version of GZ-->
    <xacro:arg name="is_ignition" default="true"/>

    <!-- we can include another xacro file here -->
    <xacro:include filename="$(find bumperbot_description)/urdf/bumperbot_gazebo.urdf.xacro" />

    <!-- we can add ros2 control configuration -->
    <xacro:include filename="$(find bumperbot_description)/urdf/bumperbot_ros2_control.xacro" />
     
    <!-- interface between robot and surrounding environment -->
    <link name="base_footprint"/>
     
    <!-- Add a base link -->
    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0.04" rpy="0.0 0.25 0.3" />
            <mass value="8.2573504e-01"/>
            <inertia ixx="2.2124416e-02" ixy="-1.2294101e-04" ixz="3.4938785e-04"
                    iyy="2.1193702e-02" iyz="-5.0120904e-05"
                    izz="2.0064271e-02" />
        </inertial>
        <visual>
            <!-- orientation of the mesh relative to the *base_link* frame (identity transform) -->
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/base_link.STL"/>
            </geometry>
        </visual>
        <!-- Collision geometry for physics simulation. Same mesh.-->
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/base_link.STL" />
            </geometry>
        </collision>
    </link>
    
    <!-- Fixed joint connecting base_footprint to base_link -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <!-- orientation of base_link relative to base_footprint (identity) -->
        <origin xyz="0 0 0.033" rpy="0 0 0"/>
    </joint>

    <!-- Right wheel link -->
    <link name="wheel_right_link">
        <inertial>
        <origin xyz="0 -0.014 0" rpy="0 0 0" />
        <mass value="0.0530086090966721" />
        <inertia ixx="1.88176298336665E-05" ixy="-4.8444933029987E-10" ixz="1.88163708851143E-08"
                iyy="3.11510738647764E-05" iyz="-6.93560663069607E-11"
                izz="1.8801969558182E-05" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/wheel_right_link.STL"/>
            </geometry>
        </visual>
        <!-- Collision geometry for physics simulation. Sphere approximation of wheel -->
        <collision>
            <origin xyz="0 -0.015 0" rpy="1.57 0 0" />
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Joint connecting wheel to base link -->
    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <!-- Rotate around the y-axis of the robot-->
        <axis xyz="0 1 0"/>
        <!-- rotate wheel by 90 degrees to align correctly -->
        <origin xyz="0 -0.07 0" rpy="0 0 0"/>     
    </joint>

    <!-- Left wheel link -->
    <link name="wheel_left_link">
        <inertial>
        <origin xyz="0 0.014 0" rpy="0 0 0" />
        <mass value="0.0530086043217644" />
        <inertia ixx="1.8792911368909E-05"  ixy="3.31256392204584E-10" ixz="-1.14082001662767E-08"
                iyy="3.11510738759073E-05" iyz="-3.60499245082192E-10"
                izz="1.88266886146847E-05" />
        </inertial>
        <visual>
            <!-- Rotate the wheel mesh by 90 degrees -->
            <origin xyz="0 0 0" rpy="-1.5708 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/wheel_left_link.STL"/>
            </geometry>
        </visual>
        <!-- Collision geometry for physics simulation. Sphere approximation of wheel -->
        <collision>
            <origin xyz="0 0.015 0" rpy="-1.57 0 0" />
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Joint connecting left wheel to base link -->
    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <!-- Rotate around the y-axis of the robot-->
        <axis xyz="0 1 0"/>
        <origin xyz="0 0.07 0" rpy="0 0 0"/>     
    </joint>

    <!-- front caster wheel -->
    <link name="caster_front_link">
        <inertial>
            <origin xyz="3.89968128948481E-07 2.40073004698083E-07 0.00219173397061506" rpy="0 0 0" />
            <mass value="1.44379265037903E-06" />
            <inertia ixx="7.23075276010246E-11" ixy="-6.10956883467859E-16" ixz="2.22849693525031E-15"
                    iyy="3.8713793085917E-11"  iyz="2.93909858781952E-15"
                    izz="1.00967486676306E-10" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/caster_front_link.STL"/>
            </geometry>
        </visual>
        <!-- Collision geometry for physics simulation. Sphere approximation of caster -->
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Joint connecting front caster to base link -->
    <joint name="caster_front_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_front_link"/>
        <origin xyz="0.04755 0 -0.0275" rpy="0 0 0"/>
    </joint>
     
    <!-- rear caster wheel -->
    <link name="caster_rear_link">
        <inertial>
            <origin xyz="3.8996812895542E-07 2.40073004698083E-07 0.00219173397061509" rpy="0 0 0" />
            <mass value="1.44379265037902E-06" />
            <inertia ixx="7.23075276010246E-11" ixy="-6.10956872363424E-16" ixz="2.22849693527207E-15"
                    iyy="3.87137930859167E-11" iyz="2.939098587861E-15"
                    izz="1.00967486676306E-10" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bumperbot_description/meshes/caster_rear_link.STL"/>
            </geometry>
        </visual>
        <!-- Collision geometry for physics simulation. Sphere approximation of caster -->
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.005"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Joint connecting rear caster to base link -->
    <joint name="caster_rear_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_rear_link"/>
        <origin xyz="-0.04755 0 -0.0275" rpy="0 0 0"/>
    </joint>
     
</robot>
